---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
       {{ site.first_name }} {{ site.middle_name }}
        <span class="font-weight-bold">{{ site.last_name }}</span>
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <div style="display: flex; justify-content: space-between; align-items: flex-start;">

    <!-- Content -->
    <div class="content" style="flex-grow: 1; margin-right: 20px;"> 
      {{ content }}
    </div>

    <!-- Profile Image -->
    {% if page.profile %}
      <div class="profile" style="margin-left: 20.5px; width: 21%; flex-shrink: 0;"> #c'est ici qu'il faut modifier pour changer la taille de la photo
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          <!-- Removed the 'z-depth-1' class to eliminate the shadow effect -->
          {% assign profile_image_class = 'img-fluid' %}
          <!-- Adjusted size for better alignment with the text -->
          {% capture sizes %}(min-width: {{site.max_width}}) 21vw, 21vw, 95vw{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image cache_bust=true
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}
    
  </div>

  <!-- Remaining sections unchanged -->
</div>
